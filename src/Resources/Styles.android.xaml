<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             x:Class="Ashennes.Resources.StylesAndroid">

    <Style x:Key="CastSpellPageComboBoxEdit"
           TargetType="dxe:ComboBoxEdit"
                              
           BasedOn="{StaticResource AshennesBaseComboBoxEdit}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="BoxPadding" Value="0" />
        <Setter Property="CornerMode" Value="Round" />
        <Setter Property="CornerRadius" Value="22" />
        <Setter Property="TextHorizontalAlignment" Value="Center" />
        <Setter Property="TextVerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>